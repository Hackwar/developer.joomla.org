<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset />

	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_GHMARKDOWNDISPLAY_FILTER_SEARCH_REPOSITORIES_LABEL"
			description="COM_GHMARKDOWNDISPLAY_SEARCH_IN_REPOSITORY"
			hint="JSEARCH_FILTER"
		/>

		<field
			name="published"
			type="status"
			label="JOPTION_SELECT_PUBLISHED"
			description="JOPTION_SELECT_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
	</fields>

	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="a.id DESC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.name ASC">COM_GHMARKDOWNDISPLAY_HEADING_NAME_ASC</option>
			<option value="a.name DESC">COM_GHMARKDOWNDISPLAY_HEADING_NAME_DESC</option>
			<option value="a.repository_owner ASC">COM_GHMARKDOWNDISPLAY_HEADING_REPOSITORY_OWNER_ASC</option>
			<option value="a.repository_owner DESC">COM_GHMARKDOWNDISPLAY_HEADING_REPOSITORY_OWNER_DESC</option>
			<option value="a.repository_name ASC">COM_GHMARKDOWNDISPLAY_HEADING_REPOSITORY_NAME_ASC</option>
			<option value="a.repository_name DESC">COM_GHMARKDOWNDISPLAY_HEADING_REPOSITORY_NAME_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
