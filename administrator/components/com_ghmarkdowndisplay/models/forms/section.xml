<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset>

		<field
			name="id"
			type="number"
			label="JGLOBAL_FIELD_ID_LABEL"
			default="0"
			class="readonly"
			size="10"
			readonly="true"
		/>

		<field
			name="name"
			type="text"
			label="COM_GHMARKDOWNDISPLAY_FIELD_NAME_LABEL"
			class="input-xxlarge input-large-text"
			size="40"
			required="true"
		/>

		<field
			name="published"
			type="list"
			label="JSTATUS"
			class="chzn-color-state"
			size="1"
			default="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field
			name="checked_out"
			type="hidden"
			filter="unset"
		/>

		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"
		/>
	</fieldset>

	<fieldset
		name="section"
	>

		<field
			name="repository_id"
			type="sql"
			label="COM_GHMARKDOWNDISPLAY_FIELD_REPOSITORY_LABEL"
			size="30"
			required="true"
			sql_select="id AS value, name AS text"
			sql_from="#__ghmarkdowndisplay_repositories"
			key_field="value"
			value_field="text"
			validate="exists"
			exists_table="#__ghmarkdowndisplay_repositories"
		/>
	</fieldset>
</form>
